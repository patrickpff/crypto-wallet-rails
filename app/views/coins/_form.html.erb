<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym %>
  </div>

  <div>
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image %>
    <% if coin.url_image.present? %>
      <%= image_tag coin.url_image, size: "32x32", alt: coin.acronym %>
    <% end %>
  </div>

  <div>
    <%= form.label :mining_type_id, "Mining Type", style: "display: block" %>
    <%= form.select :mining_type_id, options_for_select(@mining_types_options, coin.mining_type_id), prompt: "Select Mining Type", include_blank: "Select Mining Type" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
