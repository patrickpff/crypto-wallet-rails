<p style="color: green"><%= notice %></p>

<% content_for :title, "Coins" %>

<h1>Coins</h1>

<div id="coins">
  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Acronym</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td>
            <%= image_tag coin.url_image, width: 32, heigth: 32, alt: coin.acronym %>
          </td>
          <td><%= link_to t('links.show'), coin %></td>
          <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
          <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New coin", new_coin_path %>
